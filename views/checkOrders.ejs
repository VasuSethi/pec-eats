        <div class="form1">
        <% for(var i=0; i<orders.length; i++){ %>
                
                <h6 class="col-12">Order No. <%= orders[i].orderId %></h6>
                <div class="row" style="margin-bottom: 10px;">
                <h6 class="col-4">Customer Name: <%= orders[i].user.name %></h6>
                <h6 class="col-4">Customer Address: <%= orders[i].user.address %></h6>
                <h6 class="col-4">Customer Contact: <%= orders[i].user.phoneNo %></h6>
                </div>
                <% for (var j=0;j<orders[i].items.menu.length;j++){ %>
                    <div class="row">
                    <h6 class="col-4"><%=orders[i].items.menu[j][0] %></h6>
                    <!-- <h6 class="col-4"><%=orders[i].items.menu[j][1] %></h6> -->
                    <h6 class="col-1"><%=orders[i].items.menu[j][2] %></h6>
                    </div>
                <% } %>
                
                  <!-- <label for="count" name="<%= i%>" id="<%= i%>" class="count">0</label> -->
                  <h3 class="bill col-4">Bill: <%= orders[i].items.bill %></h3>
                  <input type="hidden" name="orderId" value="<%= orders[i].orderId %>">
                <form class="form-signin" action="/removeOrder" method="POST">
                    <input type="hidden" name="orderId" value="<%=orders[i].orderId%>">
                  <button type="submit" class="btn btn-primary orderComplete" name="btn" value="owner">Order Completed</button>
                  <hr>
               </form>
            <% } %>
        </div>
        


